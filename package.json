{
  "name": "js-btc-converter",
  "version": "1.0.1",
  "description": "A CLI to convert BitCoin to any currency you like.",
  "main": "bin/index.js",
  "scripts": {
    "babel-transpiler": "./node_modules/.bin/babel --out-dir bin src",
    "build-es5": "npm run clear && npm run babel-transpiler",
    "build": "npm run build-es5",
    "clear": "rimraf bin",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls",
    "prepush": "npm run lint && npm run test:coverage",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --reporter nyan",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc npm test"
  },
  "preferGlobal": true,
  "bin": {
    "btc-converter": "bin/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/DarlanCaruso/btc-converter.git"
  },
  "files": [
    "dist",
    "bin"
  ],
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": "tests/**"
  },
  "eslintIgnore": [
    "tests/*.js"
  ],
  "keywords": [
    "js",
    "tdd",
    "biblioteca"
  ],
  "author": "Darlan Caruso <devcaruso@gmail.com> (http://darlancaruso.com.br/)",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.3.0",
    "child_process": "^1.0.2",
    "commander": "^2.13.0",
    "node-fetch": "^1.7.3",
    "ora": "^1.3.0",
    "request": "^2.83.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "mocha": "^4.1.0",
    "nock": "^9.1.6",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.2.0",
    "sinon-chai": "^2.14.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^3.10.0"
  }
}
